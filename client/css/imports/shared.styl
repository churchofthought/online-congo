html, body
	width: 100%
	height: 100%
	margin: 0
	padding: 0

html
	user-select: none
	font-size: 12px
	font-family: sans-serif

body
	display: flex
	flex-direction: column
	flex-wrap: nowrap

	align-items: stretch
	align-content: stretch

*[data-selected=true]
	outline: .2em solid #00f

*[data-visible]
	transition: .25s opacity, .25s visibility

*[data-visible=false], video:not([src])
	opacity: 0
	visibility: hidden

iframe
	display: none

.btn
	background: #fff
	border-radius: .2em
	border: 0.1em solid #555

	cursor: pointer

	&[data-pressed=false]
		opacity: .8

	&:hover
		box-shadow: 0 0 0.2em #fff
