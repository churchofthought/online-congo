.sidebar .chat
	flex-grow: 1

	border-top: .1em solid rgba(0,0,0,0.15)

	display: flex
	flex-direction: column
	flex-wrap: nowrap

	align-items: stretch
	align-content: stretch

	.msgs
		word-wrap: break-word
		> div
			> div:first-child
				clear: both

			> div:nth-child(2n)
				float: right

			> div:nth-child(2n + 1)
				clear: left
				margin-right: 4em


	textarea
		margin: 0
		padding: 0
		max-width: 100%
		min-width: 100%
		width: 100%
		flex-grow: 1