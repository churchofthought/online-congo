.peers .peer

	display: flex
	flex-direction: column
	flex-wrap: nowrap

	align-items: stretch
	align-content: stretch


	position: relative
	text-align: center
	margin-left: 1vw

	min-width: 10vw
	min-height: 10vw

	box-shadow: 0 0 0.15em rgba(0,0,0,0.5)

	.streams
		flex-grow: 1

	.stream

		display: inline-block
		overflow: hidden
		position: relative
		resize: both

		video
			object-fit: cover
			pointer-events: none
			width: 100%
			height: 100%

		img
			object-fit: cover
			pointer-events: none
			width: 100%
			height: 100%

