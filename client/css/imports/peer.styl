	.name
		flex-grow: 0
		flex-shrink: 0
		margin-top: .2em
		position: relative
		z-index: 1

	.ava
		flex-grow: 1
		background: no-repeat center center url('images/avatar.svg')
		background-size: 100% 100%

	&:not([data-vids='0']) .ava, &[data-vids='0'] .streams
		display: none

	audio
		display: none

	.db
		background: rgba(0,0,0,0.5)
