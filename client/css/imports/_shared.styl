$resizer
	content: ""
	position: absolute
	bottom: 0
	right: 0
	background: #fff no-repeat center center url('images/resizer.svg');
	background-size: cover
	width: .5em
	height: .5em
	z-index: 1

html, body
	width: 100%
	height: 100%
	margin: 0
	padding: 0
	overflow: hidden

html
	user-select: none
	font-size: 12px
	font-family: sans-serif

body
	display: flex
	flex-direction: column
	flex-wrap: nowrap

	align-items: stretch
	align-content: stretch

*[data-selected=true]
	outline: .2em solid #00f

*[data-visible]
	transition: .1s opacity, .1s visibility

*[data-visible=false], video:not([src])
	opacity: 0
	visibility: hidden

iframe
	display: none

.btn
	background: #fff
	border-radius: .2em
	border: 0.1em solid #555

	cursor: pointer

	&[data-pressed=false]
		opacity: .8

	&:hover
		box-shadow: 0 0 0.2em #fff
